const {
  createBikeEntry,
  createBikeSpecEntry,
  updateBikeEntry,
  updateBikeSpecEntry,
  deleteBikeEntry,
  deleteBikeSpec,
} = require("../controllers/portalControllers");

const express = require("express");
const router = express.Router();

router.route("/details").post(createBikeEntry);

router.route("/details/:id").put(updateBikeEntry).delete(deleteBikeEntry);

router.route("/specs").post(createBikeSpecEntry);

router.route("/specs/:id").put(updateBikeSpecEntry).delete(deleteBikeSpec);

module.exports = router;
